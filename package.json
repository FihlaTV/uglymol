{
  "name": "uglymol",
  "version": "0.3.1",
  "description": "Macromolecular Viewer for Crystallographers",
  "homepage": "https://uglymol.github.io",
  "main": "uglymol.js",
  "files": [
    "uglymol.js",
    "uglymol.min.js",
    "src"
  ],
  "dependencies": {
    "three": "~0.80.1"
  },
  "devDependencies": {
    "benchmark": "^2.1.0",
    "chai": "^3.5.0",
    "eslint": "^3.4.0",
    "eslint-config-xo": "^0.15.4",
    "http-server": "^0.9.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.0.2",
    "uglify-js": "^2.7.3"
  },
  "scripts": {
    "test": "mocha",
    "coverage": "istanbul cover -x '**/perf/**' _mocha -- --timeout 100000",
    "lint": "eslint src test perf || exit 0",
    "download-data": "node perf/util.js download-data",
    "build:concat": "tools/concat.sh",
    "build:uglify": "uglifyjs uglymol.js -o uglymol.min.js --compress --mangle",
    "build": "npm run build:concat && npm run build:uglify",
    "version": "npm run build && git add -A uglymol.js",
    "prepublish": "npm run build",
    "prebuild": "npm test",
    "pretest": "npm run lint",
    "start": "http-server -a localhost -p 7890 -c-1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/uglymol/uglymol.git"
  },
  "keywords": [
    "crystallography",
    "biochemistry",
    "webgl",
    "coot",
    "protein",
    "structure"
  ],
  "license": "MIT"
}
